{
  "name": "agent-zero-monorepo",
  "version": "1.0.0",
  "description": "Agent Zero - Autonomous AI Agent Framework Monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "npm@10.8.2",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "nx run-many --target=build --all",
    "test": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "nx run-many --target=typecheck --all",
    "clean": "nx reset && rm -rf dist coverage .nx/cache",
    "dev": "nx run-many --target=dev --all --parallel",
    "dev:agent-zero": "nx run agent-zero-core:dev",
    "dev:webui": "nx run webui:dev",
    "dev:crm": "nx run crm:dev",
    "start": "nx run agent-zero-core:start",
    "prepare": "husky install || true",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "nx": "21.4.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.0",
    "@nx/eslint": "21.4.0",
    "@nx/jest": "21.4.0",
    "@nx/js": "21.4.0",
    "@nx/workspace": "21.4.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,css,md}": [
      "prettier --write"
    ],
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "author": "Agent Zero Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jubenitogarcia/agent-zero.git"
  }
}